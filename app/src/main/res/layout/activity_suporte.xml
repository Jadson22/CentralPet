<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cursoandroid.centralpet.centralpet.activity.Suporte"
    android:background="@drawable/fundo_principal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/toolbar"
                android:id="@+id/toolbar_suporte"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/espc_telas"
            android:layout_below="@id/toolbar_suporte"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sobre"
                    android:textSize="@dimen/txt_cad"
                    android:textColor="@color/txtgeral"
                    android:textStyle="bold"
                    android:id="@+id/sobre"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avalie"
                    android:textSize="@dimen/txt_cad"
                    android:layout_below="@id/sobre"
                    android:textColor="@color/txtgeral"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gostou do App? Deixe sua avaliação"
                    android:textColor="@color/txtgeral"
                    android:textSize="@dimen/txt_cad"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txt"/>

        </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
