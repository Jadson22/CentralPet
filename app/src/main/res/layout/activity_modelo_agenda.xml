<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ModeloAgenda"
    android:background="@drawable/fundo_principal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rlmodelo"
            android:orientation="vertical">
            <include layout="@layout/toolbar"
                android:id="@+id/toolbar_perfil"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:useDefaultMargins="true">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:id="@+id/NOME"
                    android:layout_columnWeight="0.2"
                    android:textColor="#000"
                    android:text="Nome: "
                    android:textSize="@dimen/txt_cad" />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:id="@+id/COMPROMISSO"
                    android:layout_columnWeight="0.2"
                    android:textColor="#000"
                    android:text="Compromisso:"
                    android:textSize="@dimen/txt_cad"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:id="@+id/TIPO"
                    android:layout_columnWeight="0.2"
                    android:textColor="#000"
                    android:text="Tipo"
                    android:textSize="@dimen/txt_cad"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:id="@+id/ESPECIFICACAO"
                    android:layout_columnWeight="0.2"
                    android:textColor="#000"
                    android:text="Outro: "
                    android:textSize="@dimen/txt_cad"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:id="@+id/DATA"
                    android:layout_columnWeight="0.2"
                    android:textColor="#000"
                    android:text="Data:"
                    android:textSize="@dimen/txt_cad"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:id="@+id/HORA"
                    android:layout_columnWeight="0.2"
                    android:textColor="#000"
                    android:text="Horario: "
                    android:textSize="@dimen/txt_cad"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="6"
                    android:id="@+id/LOCAL"
                    android:layout_columnWeight="0.2"
                    android:textColor="#000"
                    android:text="Local: "
                    android:textSize="@dimen/txt_cad"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="7"
                    android:id="@+id/OBS"
                    android:layout_columnWeight="0.2"
                    android:textColor="#000"
                    android:text="Observações: "
                    android:textSize="@dimen/txt_cad"/>


                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:id="@+id/nomeid"
                    android:layout_columnWeight="0.8"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="@dimen/txt_cad"
                    style="@style/estiloModelo"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:id="@+id/compromissoid"
                    android:layout_columnWeight="0.8"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="@dimen/txt_cad"
                    style="@style/estiloModelo"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:id="@+id/tipoid"
                    android:layout_columnWeight="0.8"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="@dimen/txt_cad"
                    style="@style/estiloModelo"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:id="@+id/outroid"
                    android:layout_columnWeight="0.8"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="@dimen/txt_cad"
                    style="@style/estiloModelo"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:id="@+id/dataid"
                    android:layout_columnWeight="0.8"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="@dimen/txt_cad"
                    style="@style/estiloModelo"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:id="@+id/horarioid"
                    android:layout_columnWeight="0.8"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="@dimen/txt_cad"
                    style="@style/estiloModelo"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="6"
                    android:id="@+id/localid"
                    android:layout_columnWeight="0.8"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="@dimen/txt_cad"
                    style="@style/estiloModelo"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="7"
                    android:id="@+id/obsid"
                    android:layout_columnWeight="0.8"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="@dimen/txt_cad"
                    style="@style/estiloModelo"/>

            </GridLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
